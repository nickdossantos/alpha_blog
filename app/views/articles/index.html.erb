<div class="panel-heading">Articles</div>
<table class="table">
  <tr>
    <th> Title </th>
    <th> Description</th>
  </tr>

<% @articles.each do |a| %>
 <tr>
   <td><%= a.title %></td>
   <td><%= a.description %></td>
   <td> <%= link_to 'Edit', edit_article_path(a) %> </td>
   <td><%= link_to 'Show',article_path(a) %></td>
   <td><%= link_to 'Delete', article_path(a), method: :delete, data: { confirm: 'Are you sure?' } %> </td>
 </tr>
 <%end%>
</table>
<%=link_to "Create a Post", new_article_path, class: "btn btn-default"%>
